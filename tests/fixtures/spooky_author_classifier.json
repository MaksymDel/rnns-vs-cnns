{
    "dataset_reader": {
      "type": "spooky_authors"
    },
    "train_data_path": "tests/fixtures/spooky_lines.txt",
    "validation_data_path": "tests/fixtures/spooky_lines.txt",
    "model": {
      "type": "author_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 4,
          "trainable": false
        }
      },
      "sentence_encoder": {
        "type": "boe",
        "embedding_dim": 4,
        "averaged": true
      },
      "classifier_feedforward": {
        "input_dim": 4,
        "num_layers": 2,
        "hidden_dims": [3, 5],
        "activations": "linear",
        "dropout": [0.2, 0.0]
      }
     },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["sentence", "num_tokens"]],
      "padding_noise": 0.0,
      "batch_size": 64
    },
  
    "trainer": {
      "num_epochs": 1,
      "cuda_device": -1,
      "grad_clipping": 5.0,
      "validation_metric": "+accuracy",
      "no_tqdm": true,
      "optimizer": {
        "type": "adagrad"
      }
    }
  }