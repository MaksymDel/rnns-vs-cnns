{
    "dataset_reader": {
      "type": "spooky_authors",
      "tokenizer": {
          "type": "word",
          "word_splitter": {
              "type": "just_spaces"
          }
      },
      "token_indexers": {
        "tokens": {
          "type": "single_id",
          "lowercase_tokens": false
        }
      }
    },
    "train_data_path": "data/preprocessed-train.txt",
    "validation_data_path": "data/preprocessed-dev.txt",
    "test_data_path": "data/tc-tok-test_public_X.txt",
    "evaluate_on_test": false,
    "model": {
      "type": "author_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "data/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": true
        }
      },
      "sentence_encoder": {
        "type": "rnn",
        "bidirectional": false,
        "input_size": 100,
        "hidden_size": 50,
        "num_layers": 1,
        "dropout": 0.5
      },
      "classifier_feedforward": {
        "input_dim": 50,
        "num_layers": 2,
        "hidden_dims": [10, 3],
        "activations": ["relu", "linear"],
        "dropout": [0.5, 0.0]
      },
      "regularizer": [
        ["weight$", {"type": "l2", "alpha": 0.00005}],
        ["bias$", {"type": "l1", "alpha": 0.00005}]
      ] 
    },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["sentence", "num_tokens"]],
      //"padding_noise": 0.0,
      "batch_size": 64
    },
  
    "trainer": {
      "num_epochs": 100,
      "patience": 10,
      "cuda_device": 0,
      "grad_clipping": 5.0,
      "optimizer": {
        "type": "adam"
      }
    }
}