{
    "dataset_reader": {
      "type": "spooky_authors",
      "tokenizer": {
          "type": "word",
          "word_splitter": {
              "type": "just_spaces"
          }
      }
    },
    "train_data_path": "data/preprocessed-train.txt",
    "validation_data_path": "data/preprocessed-dev.txt",
    "test_data_path": "data/tc-tok-test_public_X.txt",
    "evaluate_on_test": false,
    "model": {
      "type": "author_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "data/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": false
        }
      },
      "sentence_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 10,
        "num_layers": 1,
        "dropout": 0.2
      },
      "classifier_feedforward": {
        "input_dim": 10,
        "num_layers": 1,
        "hidden_dims": [3],
        "activations": ["relu"],
        "dropout": [0.2]
      }
     },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["sentence", "num_tokens"]],
      //"padding_noise": 0.0,
      "batch_size": 64
    },
  
    "trainer": {
      "num_epochs": 40,
      "patience": 10,
      "cuda_device": 0,
      "grad_clipping": 5.0,
      "optimizer": {
        "type": "adam"
      }
    }
  }