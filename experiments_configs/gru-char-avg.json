{
  "dataset_reader": {
    "type": "spooky_authors",
    "tokenizer": {
        "type": "character"
    },
    "token_indexers": {
      "token_characters": {
        "type": "characters"
      }
    }
  },
  "train_data_path": "data/preprocessed-train.txt",
  "validation_data_path": "data/preprocessed-dev.txt",
  "test_data_path": "data/tc-tok-test_public_X.txt",
  "evaluate_on_test": false,
  "model": {
    "type": "author_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100
      }
    },
    "sentence_encoder": {
      "type": "seq2seq2vec",
      "seq2seq_encoder": {
        "type": "gru",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 100,
        "num_layers": 1,
        "dropout": 0.5
      },
      "seq2vec_encoder": {
        "type": "boe",
        "averaged": true,
        "embedding_dim": 200
      }
    },
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [10, 3],
      "activations": ["relu", "linear"],
      "dropout": [0.5, 0.0]
    },
    "regularizer": [
      ["weight$", {"type": "l2", "alpha": 0.0005}],
      ["bias$", {"type": "l1", "alpha": 0.0005}]
    ] 
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    //"padding_noise": 0.0,
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 100,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "optimizer": {
      "type": "adam"
    }
  }
}