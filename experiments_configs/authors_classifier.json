{
    "dataset_reader": {
      "type": "spooky_authors",
      "tokenizer": {
          "type": "word",
          "word_splitter": {
              "type": "just_spaces"
          }
      }
    },
    "train_data_path": "tests/fixtures/spooky_lines.txt",
    "validation_data_path": "tests/fixtures/spooky_lines.txt",
    "model": {
      "type": "author_classifier",
      "text_field_embedder": {
        "tokens": {
          "type": "embedding",
          "pretrained_file": "data/glove/glove.6B.100d.txt.gz",
          "embedding_dim": 100,
          "trainable": false
        }
      },
      "sentence_encoder": {
        "type": "lstm",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 100,
        "num_layers": 1,
        "dropout": 0.2
      },
      "classifier_feedforward": {
        "input_dim": 200,
        "num_layers": 2,
        "hidden_dims": [200, 3],
        "activations": ["relu", "linear"],
        "dropout": [0.2, 0.0]
      }
     },
    "iterator": {
      "type": "bucket",
      "sorting_keys": [["sentence", "num_tokens"]],
      //"padding_noise": 0.0,
      "batch_size": 64
    },
  
    "trainer": {
      "num_epochs": 40,
      "patience": 10,
      "cuda_device": -1,
      "grad_clipping": 5.0,
      //"validation_metric": "+accuracy", us default, which is -loss
      //"no_tqdm": true,
      "optimizer": {
        "type": "adam"
      }
    }
  }