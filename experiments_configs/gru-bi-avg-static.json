{
  "dataset_reader": {
    "type": "spooky_authors",
    "tokenizer": {
        "type": "word",
        "word_splitter": {
            "type": "just_spaces"
        }
    },
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": false
      }
    },
    "cnn_paper_dataset": true
  },
  "train_data_path": "data_cnn_paper/stsa.binary.phrases.train",
  "validation_data_path": "data_cnn_paper/stsa.binary.dev",
  "test_data_path": "data_cnn_paper/stsa.binary.test",
  "evaluate_on_test": true,
  "model": {
    "type": "author_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "data_kaggle/glove/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "sentence_encoder": {
      "type": "seq2seq2vec",
      "seq2seq_encoder": {
        "type": "gru",
        "bidirectional": true,
        "input_size": 100,
        "hidden_size": 100,
        "num_layers": 1,
        "dropout": 0.5
      },
      "seq2vec_encoder": {
        "type": "boe",
        "averaged": true,
        "embedding_dim": 200
      }
    },
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [10, 3],
      "activations": ["relu", "linear"],
      "dropout": [0.5, 0.0]
    },
    "regularizer": [
      ["weight$", {"type": "l2", "alpha": 0.0005}],
      ["bias$", {"type": "l1", "alpha": 0.0005}]
    ] 
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    //"padding_noise": 0.0,
    "batch_size": 64
  },

  "trainer": {
    "num_epochs": 100,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "optimizer": {
      "type": "adam"
    }
  }
}